
@{
    ViewBag.Title = "title";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container col-6">
    <div class="card border-warning mb-3">
        <div class="card-header  border-warning mb-3">Giriş Yap</div>
        <div class="card-body  border-warning mb-3">
            <form>
                <div class="form-group">
                    <label for="InputEmail">Mail</label>
                    <input type="email" class="form-control" id="InputEmail" aria-describedby="emailHelp" placeholder="Enter email">
                    <small id="emailHelp" class="form-text text-muted">
                        E-postalarınızı asla başkasıyla paylaşmayacağız.
                    </small>
                </div>
                <div class="form-group">
                    <label for="InputPassword">Şifre</label>
                    <input type="password" class="form-control" id="InputPassword" placeholder="Password">
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="Check">
                    <label class="form-check-label" for="Check">Beni Hatırla</label>
                </div>
                <button type="submit" class="btn btn-success">Giriş Yap</button>
            </form>
        </div>
    </div>
</div>
