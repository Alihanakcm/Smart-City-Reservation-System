@{
    ViewBag.Title = "Anasayfa";
}
<div class="container-fluid">
    <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" data-interval="10000">
                <img src="~/images/carpark-home.png" class="d-block w-100 slider-size" alt="...">
            </div>
            <div class="carousel-item" data-interval="2000">
                <img src="~/images/petrolstation-home.png" class="d-block w-100 slider-size" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/images/carpark-home.png" class="d-block w-100 slider-size" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


<div class="card-home">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-4">
                <div class="card shadow-lg p-3 mb-5 bg-white rounded">
                    <img src="~/images/carpark-home.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Otopark</h5>
                        <p class="card-text">Akıllı otopark sistemi ile size en yakın otoparkı bulabilir, yol tarifi alabilir, otoparktaki boş alanları görebilir ve rezervasyon yapabilirsiniz.</p>
                        <div class="text-right">
                            <a asp-controller="CarPark" asp-action="CarPark" class="btn btn-primary">Listele</a>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>

            <div class="col-sm-12 col-md-4">
                <div class="card shadow-lg p-3 mb-5 bg-white rounded">
                    <img src="~/images/petrolstation-home.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Petrol İstasyonu</h5>
                        <p class="card-text">Akıllı benzin istasyonu sistemi ile size en yakın benzin istasyonunu görebilir, yol tarifi alabilir ve araç bakımı için rezervasyon yapabilirsiniz.</p>
                        <div class="text-right">
                            <a asp-controller="PetrolStation" asp-action="PetrolStation" class="btn btn-primary">Listele</a>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>

            <div class="col-sm-12 col-md-4">
                <div class="card shadow-lg p-3 mb-5 bg-white rounded">
                    <img src="~/images/pharmacy-home.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Eczane</h5>
                        <p class="card-text">Akıllı eczane sistemi ile size en yakın eczaneyi görebilir ve reçete kodunuzu girerek ilaçlarınızın hazırlanmasını sağlayabilirsiniz.</p>
                        <div class="text-right">
                            <a asp-controller="Pharmacy" asp-action="Pharmacy" class="btn btn-primary">Listele</a>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>
