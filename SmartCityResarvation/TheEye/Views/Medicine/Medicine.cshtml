@model System.Collections.Generic.List<TheEye.Entities.Concrete.Medicine>

@{
    ViewBag.Title = "İlaç Listesi";
}

@await Html.PartialAsync("MainSite/_Banner")
<div class="container">
        <br />
        <div class="input-group mb-3">
            <input id="input-text" type="text" class="form-control" placeholder="Arama Yap..." aria-label="Recipient's username" aria-describedby="button-addon2">
        </div>
        @foreach (var item in Model)
        {
            <div class="card mb-3" style="max-width: 1540px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="~/images/carpark.jpg"
                             class="card-img"
                             height="100%"
                             alt="..." />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@item.MedicineName</h5>
                            <div class="col-md-12">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">İlaç Tipi</th>
                                                <th scope="col">İlaç Adeti</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>@item.MedicineType</td>
                                                <td>@item.MedicinePiece</td>
                                            </tr>
                                        </tbody>
                                        <thead>
                                            <tr>
                                                <th>İlaç Bilgisi</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>@item.MedicinePrescription</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <p>
                        <br />
                        <button class="btn btn-info" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                            Otopark Detaylarını Getir
                        </button>
                    </p>
                    <div class="collapse" id="collapseExample">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">İl</th>
                                            <th scope="col">İlçe</th>
                                            <th scope="col">Adres</th>
                                            <th scope="col">Telefon</th>
                                            <th scope="col">E-mail</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>@item.Company.CompanyCity</td>
                                            <td>@item.Company.CompanyDistrict</td>
                                            <td>@item.Company.CompanyAdress</td>
                                            <td>@item.Company.CompanyPhone</td>
                                            <td>@item.Company.CompanyMail</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>