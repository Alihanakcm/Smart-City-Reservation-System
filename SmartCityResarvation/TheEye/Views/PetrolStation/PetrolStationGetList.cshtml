@model System.Collections.Generic.List<TheEye.Entities.Concrete.PetrolStation>

@{
    ViewBag.Title = "Petrol Ofisi Listesi";
    Layout = "AdminSite/_AdminLayout";
}


<div class="card-header">
    <h4 class="card-title">Petrol İstasyonu Listesi</h4>
</div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="text-primary">
                <tr>
                    <th>Türü</th>
                    <th>Adı</th>
                    <th>Mail Adresi</th>
                    <th>Şehir</th>
                    <th>Bölge</th>
                    <th>Kapanış Saati</th>
                    <th>Adres</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PetrolFuelType</td>
                        <td>@item.Company.CompanyName</td>
                        <td>@item.Company.CompanyMail</td>
                        <td>@item.Company.CompanyCity</td>
                        <td>@item.Company.CompanyDistrict</td>
                        <td>@item.Company.CompanyTime</td>
                        <td>@item.Company.CompanyAdress</td>
                        <td> <a asp-controller="PetrolStation" asp-action="PetrolStationOparation" asp-route-id="@item.PetrolId" class="btn btn-success">İçerik Güncelleme</a></td>
                        <td> <a asp-controller="Company" asp-action="CompanyUpdate" asp-route-id="@item.Company.CompanyId" class="btn btn-success">Firma Bilgi Güncelle</a></td>
                        <td> <a asp-controller="Company" asp-action="CompanyDelete" asp-route-id="@item.PetrolId" class="btn btn-danger text-light">Sil</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>